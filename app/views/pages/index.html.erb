<div class="jumbotron text-white text-center">
  <div class="container">
    <h1 class="display-4">Hi There!!</h1>
    <p class="lead">Welcome to Shoes4All, This is the place to for hypebeast or collector who are looking to buy or sell shoes.</p>
    <hr class="my-4">
    <p>You are free browse our collections, please do sign up to make a purchase or sell shoes.</p>
  </div>
      <p class="lead">
      <% unless user_signed_in?%>
        <%= link_to "Sign Up", new_user_registration_path, class: 'btn btn-primary'%>
      <% end %>
    </p>
  </div>
<div class="container">
  <h3 class="display-4">Featured Items</h3>
  <div class="row">
    <% @listings.each do |list| %>
      <div class="col-md-4">
        <div class="card text-center" style="width:18rem;height:28rem;">
          <div class="card-img mt-2">
            <%= link_to image_tag(list.picture, class:"card-img-top", style: "width:80%;height:90%;"), listing_path(list.id) %>
          </div>
          <div class="card-body mt-0">
            <h4 class="card-title"><%= list.name %></h4>
            <p class="card-subtitle">Brand: <%= list.brand %></p>
              <div class="price text-success">
                <h5>Price: <%= number_to_currency(list.price) %></h5>
              </div>
          </div>
        </div>  
      </div>
    <% end %>
  </div>
</div>