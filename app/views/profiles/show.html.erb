<div class="row">
  <div class="col s12 m6">
    <div class="product-info">
      <h3 
        class="header">
        <%= @user.profile.first_name %> | 
        <%= @user.profile.surname %>
      </h3>
      <h6 class="p-text">location: <%= @user.profile.location %></h6>
    </div>
    <div class="links">
      <% if can? :edit, @listing %>
        <%= link_to 'Edit Profile', edit_profile_path(current_user) %>
      <% end %>
    </div>
  </div>
</div>