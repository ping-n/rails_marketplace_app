<div class="container">
  <% if @user.errors.any? %>
    <div class="alert-warning">
      <h4 class="display-4">
        <%= pluralize(@user.errors.count, "error") %> prohibited
        this listing from being saved:
      </h4>
      <ul>
        <% @user.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card">
    <div class="card-header">
      <h1>Edit Profile</h1>
    </div>

   <div class="card-body">
    <%= form_with scope: @user, url: profile_path, local: true, method: "patch" do |form| %>
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :surname %>
        <%= form.text_field :surname, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :location %>
        <%= form.text_field :location, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, autocomplete: 'off', placeholder: 'Brief Introduction...', class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= form.submit "Update", class: "btn btn-primary"%>
      </div>
    <% end %>
    </div>
  </div>
</div>