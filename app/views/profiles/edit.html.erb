<div class="container">
  <div class="card">
    <div class="card-header">
      <h1>Edit Profile</h1>
    </div>

   <div class="card-body">
    <%= form_with model: @profile, local: true do |form| %>
      <div class="form-group">
        <%= form.label :first_name %>
        <%= form.text_field :first_name, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :surname %>
        <%= form.text_field :surname, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :location %>
        <%= form.text_field :location, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, autocomplete: 'off', placeholder: 'Please include shoes size and where you purchase the shoe from.', class: 'form-control'%>
      </div>

      <div class="form-group">
        <%= form.submit "Update", class: "btn btn-primary"%>
      </div>
    <% end %>
    </div>
  </div>
</div>