<main class="container h-100">
  <div class="card">
    <div class="card-body">
      <h2 class="card-title">
        Shopping Cart
      </h2>
      <table class="table">
        <thead>
          <tr>
            <th>#</th>
            <th>Item</th>
            <th>Price</th>
            <th>Remove</th>
          </tr>
        </thead>
        <tbody>
          <% @cart.each_with_index do |listing, index| %>
            <tr>
              <td><%= index+= 1 %></td>
              <td><%= listing.name %></td>
              <td><%= number_to_currency(listing.price) %></td>
              <td><%= link_to "Remove from Cart", destroy_cart_path(listing_id: listing.id), method: :delete, class: "btn btn-success" %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div class="card-footer">
        <%= link_to "Buy Now", "/payments/session", id: "stripe", class: "btn btn-success" %>
      </div>
    </div>
  </div>
</main>

<div class="alert mt-2"><%= flash[:alert] %></div>

<%= javascript_pack_tag "stripe" %>