<%= form_with model: @listing, local: true do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.radio_button :condition, :used, :checked => true %> 
    <%= label :condition, 'Used' %>
    <%= form.radio_button :condition, :brand_new %>
    <%= label :condition, 'Brand New' %>
  </div>

  <div class="file-upload">
    <%= form.label :picture %> 
    <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>

  <div>
    <%= form.submit %>
  </div>

<% end %>