<%= form_with model: @listing, local: true do |form| %>

  <div class="form-group">
    <%= form.label :name %>
    <%= form.text_field :name, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :brand %>
    <%= form.text_field :brand, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.label :price %>
    <%= form.number_field :price, class: 'form-input' %>
  </div>

  <div class="form-group">
    <%= form.collection_select :category_id, Category.order(:name),:id,:name %>
  </div>

  <div class="form-group">
    <% @conditions.each do |option| %>
      <%= form.radio_button :condition, option%> 
      <%= form.label "condition_#{option}".to_sym, option %>
    <% end %>
  </div>

  <div class="file-upload">
    <%= form.label :picture %> 
    <%= form.file_field :picture, accept: 'image/png,image/gif,image/jpeg,image/jpg' %>
  </div>

  <div>
    <%= form.submit, class: 'btn btn-primary' %>
  </div>

<% end %>